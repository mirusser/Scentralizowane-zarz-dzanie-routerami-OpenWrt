@model RouterManagement.Models.ViewModels.Status.AdminPanelViewModel

@{
    ViewBag.Title = "Admin";
}

<div class="row">
    <div class="col-md-4 text-center">
        <h2>Menu</h2>
        @using (Html.BeginForm("AllRouters", "Admin", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-12">
                <input type="submit" value="Manage saved routers" class="btn btn btn-primary col-md-12 col-xs-12" />
            </div>
        }
        @using (Html.BeginForm("FullConfiguration", "Admin", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-12">
                <input type="submit" value="Show full configuration" class="btn btn btn-primary col-md-12 col-xs-12" />
            </div>
        }
        @using (Html.BeginForm("Wireless", "Admin", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-12">
                <input type="submit" value="Configure wireless" class="btn btn btn-primary col-md-12 col-xs-12" />
            </div>
        }
        @using (Html.BeginForm("Firewall", "Admin", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-12">
                <input type="submit" value="Configure firewall" class="btn btn btn-primary col-md-12 col-xs-12" />
            </div>
        }
    </div>
    <div class="col-md-8">
        <h2 class="text-center">Current system parameters</h2>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td>Defined clients in database</td>
                    <td>@Model.NumbersOfSavedClients</td>
                </tr>
                <tr>
                    <td>Connected clients</td>
                    <td>@Model.NumbersOfConnectedClients</td>
                </tr>
            </tbody>
        </table>

        

        @foreach (var router in Model.RoutersStatusViewModel)
        { 
        <table class="table table-striped table-bordered">
            <thead class="thead-inverse">
                <tr>
                    <th colspan="2">Online routers basics data</th>
                </tr>
            </thead>
            <tbody>
            <tr>
                <td>Name</td>
                <td>@router.RouterName</td>
            </tr>
            <tr>
                <td>RAM</td>
                <td>Total: @router.CurrentMemoryUsage.RamTotal kB, Used: @router.CurrentMemoryUsage.RamUsed kB, Free: @router.CurrentMemoryUsage.RamFree kB</td>
            </tr>
            <tr>
                <td>SWAP</td>
                <td>Total: @router.CurrentMemoryUsage.SwapTotal kB, Used: @router.CurrentMemoryUsage.SwapUsed kB, Free: @router.CurrentMemoryUsage.SwapFree kB</td>
            </tr>
            </tbody>
        </table>
        }
    </div>
</div>