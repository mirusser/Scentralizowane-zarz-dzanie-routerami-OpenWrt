        $(document).on('click', '.remove-item', function () {
            var ruleId = $(this).closest('tr').find('.id').text();
            $.ajax({
                type: "POST",
                url: "/Admin/RemoveRule",
                data: {
                    ruleId: ruleId,
                    name: '@routerName'
                },
                cache: false,
                success: function (result) {
                    if (result) {
                        rulesList.remove("id", ruleId);
                    }
                    else {
                        alert("There was a problem when deleting rule.");
                    }
                }
            });
        });
