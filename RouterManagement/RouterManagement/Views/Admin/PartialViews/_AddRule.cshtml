        function validateIPaddress(inputText)  
        {  
            var format = /^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;  
            if (format.test(inputText)){  
                return true;
            }
            else  {  
                return false;  
            }  
        }

        function validateMACaddress(inputText) {
            var format = /^([0-9A-F]{2}[:]){5}([0-9A-F]{2})$/;
            if (format.test(inputText)) {
                return true;
            }
            else {
                return false;
            }
        }

        function validateHour(inputText) {
            var format = /^([0-1]?[0-9]|2[0-4]):([0-5][0-9])(:[0-5][0-9])?$/;
            if (format.test(inputText)) {
                return true;
            }
            else {
                return false;
            }
        }
